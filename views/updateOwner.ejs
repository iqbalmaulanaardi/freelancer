<!DOCTYPE html>
<html lang="en">

<head>
    <%-include ./partials/head.ejs%>
</head>

<body>
    <div <%-include ./partials/style-wrap.ejs%>>
        <form action="/owners/update/<%=owner.id%>" method="POST">
            <!-- title,description,budget,deadline -->
            <h2>Update Project</h2>
            <div class="form-group">
                <label for="title">Name</label>
                <input type="text" class="form-control" id="title" value="<%=owner.name%>" name="name" required>
            </div>
            <div class="form-group">
                <label for="description">Address</label>
                <input type="text" class="form-control" id="description" value="<%=owner.address%>" name="address" required>
            </div>
            <div class="form-group">
                <label for="title">Email</label>
                <input type="text" class="form-control" id="title" value="<%=owner.email%>" name="email" required>
            </div>
            <div class="form-group">
                <label for="description">Phone Number</label>
                <input type="text" class="form-control" id="description" value="<%=owner.phone_number%>" name="phone_number" required>
            </div>
            <div class="form-group">
                <label for="title">Company</label>
                <input type="text" class="form-control" id="title" value="<%=owner.company%>" name="company" required>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <%- include ./partials/script.ejs%>
</body>

</html>